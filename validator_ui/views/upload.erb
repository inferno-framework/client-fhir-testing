<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <meta name="description" content="">
  <meta name="author" content="">
  <link rel="icon" href="/docs/4.0/assets/img/favicons/favicon.ico">

  <title>Checkout example for Bootstrap</title>

  <link rel="canonical" href="https://getbootstrap.com/docs/4.0/examples/checkout/">

  <!-- Bootstrap core CSS -->
  <link href="/css/bootstrap.min.css" rel="stylesheet">

  <!-- Custom styles for this template -->
  <link href="form-validation.css" rel="stylesheet">
</head>

<body class="bg-light">

<div class="container">
  <div class="py-5 text-center">
    <img class="d-block mx-auto mb-4" src="https://inferno.healthit.gov/images/icon_logo.png" alt="" width="72" height="72">
    <h2>CS6440 - Parse Results Screen</h2>
    <!--    <p class="lead">Below is an example form built entirely with Bootstrap's form controls. Each required form group has a validation state that can be triggered by attempting to submit the form without completing it.</p>-->
  </div>

  <div class="row">
    <div class="col-md-6 order-md-2 mb-4">
      <h4 class="d-flex justify-content-between align-items-center mb-3">
        <span class="text-muted">Previously Uploaded</span>
        <!--        <span class="badge badge-secondary badge-pill">3</span>-->
      </h4>
      <ul class="list-group mb-3">
        <% @previous.to_a.map do |file| %>
          <li class="list-group-item d-flex justify-content-between lh-condensed">
            <div>
              <h6 class="my-0"><%= File.basename file %></h6>
              <small class="text-muted"><%= File.ctime file %></small>
            </div>
            <!--            Not Quite Right for Size -->
            <span class="text-muted"><%= File.size file %> validations</span>
          </li>
        <% end %>
      </ul>
    </div>

    <div class="col-md-6 order-md-1">
      <h4 class="mb-3">Upload New Results</h4>
      <form action="/upload-submit" method="post" enctype="multipart/form-data">
        <div class="row text-center">
          <div class="col-md-12 mb-3 text-center">
            <div class="form-group">
              <div class="input-group">
                <div class="custom-file">
                  <input type="file" class="custom-file-input" name="resultsfile">
                  <label class="custom-file-label" for="inputGroupFile02">Choose file</label>
                </div>
                <!--                <div class="input-group-append">-->
                <!--                  <span class="input-group-text">Upload</span>-->
                <!--                </div>-->
              </div>
            </div>
          </div>
        </div>
        <hr>
        <button class="btn btn-primary btn-lg btn-block" type="submit">Upload</button>
      </form>
    </div>
  </div>

  <footer class="my-5 pt-5 text-muted text-center text-small">
    <p class="mb-1">CS6440 - Group Project</p>
    <ul class="list-inline">
      <li class="list-inline-item"><a href="#">Team 37</a></li>
    </ul>
  </footer>
</div>

